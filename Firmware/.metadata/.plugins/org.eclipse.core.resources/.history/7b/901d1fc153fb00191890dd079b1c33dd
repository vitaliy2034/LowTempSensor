#include <WAdc.h>
#include <SevSeg.h>
#include <Sleep.h>

int main(void)
{


	RCC->APB2ENR|=RCC_APB2ENR_TIM1EN;
	Init_SevSeg();
	Sleep_Init(TIM1);

	//NVIC_EnableIRQ(TIM1_BRK_UP_TRG_COM_IRQn);

	ADC_Init();
