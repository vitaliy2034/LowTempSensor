#include <TempMes.h>
#include <SevSeg.h>
#include <Sleep.h>

int main(void)
{


	RCC->APB2ENR|=RCC_APB2ENR_TIM1EN;
	Init_SevSeg();
	Sleep_Init(TIM1);

	//NVIC_EnableIRQ(TIM1_BRK_UP_TRG_COM_IRQn);

	Init_Adc();
	uint16_t data[4];

	for(;;){
		ADC_Read(data);
		ShowDgt_SevSeg(data[0], 1, 40);
		data[0]=0;
	}

}


