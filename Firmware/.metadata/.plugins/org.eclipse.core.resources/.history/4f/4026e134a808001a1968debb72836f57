#include<TempMes.h>

float GetThermVolage(){//calib voltage 2.206
	static float prev=0;
	uint16_t * data = ADC_ReadOvrsam(4);

	float K =(abs(data[0]-prev)/80.0f);
	float result=(K>0.15f)?data[0]:K*(data[0])+(1.0f-K)*prev;
	result*=40.798f*2;///29450.0f;
	prev =result;
	//result -=7.235f;
	free(data);
	return result;
}
